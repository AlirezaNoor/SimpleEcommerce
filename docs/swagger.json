{
    "swagger": "2.0",
    "info": {
        "description": "API for a simple ecommerce platform including users and categories.",
        "title": "Ecommerce API",
        "contact": {},
        "version": "1.0"
    },
    "host": "localhost:8080",
    "basePath": "/",
    "paths": {
        "/products/all": {
            "get": {
                "description": "این متد همه محصولات را برمی‌گرداند",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "محصولات"
                ],
                "summary": "دریافت همه محصولات",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/product.Product"
                            }
                        }
                    }
                }
            }
        },
        "/products/create": {
            "post": {
                "description": "این متد یک محصول جدید ایجاد می‌کند",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "محصولات"
                ],
                "summary": "ایجاد محصول جدید",
                "parameters": [
                    {
                        "description": "اطلاعات محصول",
                        "name": "product",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/product.Product"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Created",
                        "schema": {
                            "$ref": "#/definitions/product.Product"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "/products/delete/{id}": {
            "delete": {
                "description": "این متد یک محصول را حذف می‌کند",
                "tags": [
                    "محصولات"
                ],
                "summary": "حذف محصول",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "شناسه محصول",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "204": {
                        "description": "حذف موفقیت‌آمیز"
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "/products/{id}": {
            "get": {
                "description": "این متد یک محصول را با استفاده از ID برمی‌گرداند",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "محصولات"
                ],
                "summary": "دریافت محصول با شناسه",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "شناسه محصول",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/product.Product"
                        }
                    },
                    "404": {
                        "description": "Not Found",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "product.Product": {
            "type": "object",
            "properties": {
                "description": {
                    "type": "string"
                },
                "id": {
                    "type": "integer"
                },
                "name": {
                    "type": "string"
                },
                "price": {
                    "type": "number"
                },
                "stock": {
                    "type": "integer"
                }
            }
        }
    }
}